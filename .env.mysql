# =============================================
# Shinhan AAS Server - MySQL 환경변수 설정
# 사용법: cp .env.mysql .env
# =============================================

# 프로필 설정
SPRING_PROFILES_ACTIVE=mysql

# 서버 포트
SERVER_PORT=6443

# MySQL Database 설정
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/aas_db?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8
SPRING_DATASOURCE_USERNAME=aas_user
SPRING_DATASOURCE_PASSWORD=your_password_here

# JWT 설정 (운영환경에서는 반드시 변경)
JWT_SECRET=shinhan-aas-server-secret-key-must-be-at-least-256-bits-long-for-hs256
JWT_ACCESS_TOKEN_VALIDITY=3600000
JWT_REFRESH_TOKEN_VALIDITY=604800000

# JPA 설정
SPRING_JPA_HIBERNATE_DDL_AUTO=validate
SPRING_JPA_SHOW_SQL=false
